{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": true,
    "types": ["node", "vitest/importMeta"]
  },
  "include": [
    "projects/**/*.ts",
    "types/**/*.ts",
    "utils/**/*.ts",
    "primaries/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 